version: '3.8'

services:
  dvwa:
    image: vulnerables/web-dvwa
    ports:
      
"80:80"
  environment:
PHPIDS=off
volumes:
dvwa_data:/app
depends_on:
mysql
restart: unless-stopped

  mysql:
    image: mysql:5.7
    environment:
      
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=dvwa
MYSQL_USER=dvwa
MYSQL_PASSWORD=p@ssw0rd
volumes:
mysql_data:/var/lib/mysql
restart: unless-stopped

volumes:
  dvwa_data:
  mysql_data:
